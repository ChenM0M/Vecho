{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Vecho Studio",
  "version": "0.1.0",
  "identifier": "com.vecho.studio",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Vecho Studio",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "decorations": false,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": []
      },
      "capabilities": ["default"]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "externalBin": [
      "bin/ffmpeg",
      "bin/ffprobe",
      "bin/yt-dlp"
    ]
  }
}
